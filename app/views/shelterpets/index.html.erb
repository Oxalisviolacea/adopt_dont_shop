<h1>Pets at This Shelter</h1>

<% @pets.each do |pet| %>
<h3><%= pet.name %></h3>
<img src="<%= pet.image %>" alt="Picture of the pet">
<ul>
  <li>Description: <%= pet.description %></li>
  <li>Age: <%= pet.age %></li>
  <li>Sex: <%= pet.sex %></li>
</ul>
<% end %>

<a href="/pets/new">Add a New Pet to this Shelter</a>